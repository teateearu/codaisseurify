<%= stylesheet_link_tag "styles.css" %>

<div class="container-fluid text-center">
  <br>
  <%= link_to root_path do %>
     <%= image_tag "http://res.cloudinary.com/teateearu/image/upload/c_scale,w_60/v1510507918/logopink_n6cbkf.png" %>
  <% end %>
<h1> Welcome to Christmas Codaisseurify! </h1>
<br>
<h3 class="marker">***Get into the holiday mood with these artists:***</h3>
<br>
<br>
<br>
<br>
  <% @artists.each do |artist| %>
  <div class="column">
    <div class="col-sm-4">
      <h2><%= link_to artist.name, artist_path(artist.id) %></h2>
        <%= link_to artist_path(artist.id) do %>
         <div class="artist-img"><%= image_tag artist.remote_image_url %></div>
        <% end %>
    </div>
  </div>
<% end %>
</div>
<br>
<h4 class="container-fluid text-center">Order artists
<%= link_to "alphabetically!", artists_path(order: 'artists_asc') %>
</h4>
