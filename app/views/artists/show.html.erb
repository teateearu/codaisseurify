<style>
body {
    font: 20px Montserrat, sans-serif;
    line-height: 1.8;
    color: #f5f6f7;
    background-color: #8B0000;
}
p {font-size: 16px;}
.margin {margin-bottom: 45px;}

.container-fluid {
    padding-top: 70px;
    padding-bottom: 70px;
}
</style>
<body>
<h1><%= @artist.name %></h1>

<p>Alive: <%= @artist.alive %></p>

<div>
  <h2>Songs: </h2>
  <% @artist.songs.each do |song| %>
    <p>"<%= song.title %>"<p>
    <p>Year of release: <%= song.year %><p>
    <%= link_to 'Delete', [song.artist, song], method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
</div>

<br>
<%= link_to "[Delete]", artist_path(@artist.id), method: :delete, data: { confirm: "Are you sure?" } %>
</body>
